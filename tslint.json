{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "src/"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "space-before-function-paren": [
      true,
      "always"
    ],
    "object-literal-sort-keys": false,
    "eofline": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}